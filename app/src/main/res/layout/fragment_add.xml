<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddFragment"
    android:layout_margin="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="32dp"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/tv_addtarefa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_adicionar_tarefa"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_addtarefa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/tv_addtarefa"
            app:layout_constraintStart_toStartOf="@+id/tv_addtarefa"
            app:layout_constraintTop_toBottomOf="@+id/tv_addtarefa"
            android:autofillHints="name"
            tools:ignore="LabelFor"
            android:inputType="text" />


        <Button
            android:id="@+id/bt_addtarefa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/bt_salvar_tarefa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/edit_addtarefa"
            app:layout_constraintStart_toStartOf="@+id/edit_addtarefa"
            app:layout_constraintTop_toBottomOf="@id/edit_addtarefa" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>